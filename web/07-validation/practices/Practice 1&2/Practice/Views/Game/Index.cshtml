@model IEnumerable<practice.Models.Game>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Created Games</h1>


<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Release Date</th>
            <th>Genre</th>
            <th>Rating</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var game in @Model) {

        <tr>
            <td>@game.Name</td>
            <td>@game.Price</td>
            <td>@game.ReleaseDate</td>
            <td>@game.Genre</td>
            <td>@game.Rating</td>
        </tr>
        }
    </tbody>
</table>

<a class="btn btn-primary" href="@Url.Action("Created")">Add new game</a>

